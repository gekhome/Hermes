@using Hermes.DAL
@model List<SUPPORT>

@{
    ViewBag.Title = "Επικοινωνία";
}

<h1 style="margin-bottom:40px">@ViewBag.Title</h1>

<style>
    p.sansserif {
        font-family: "Segoe UI", Arial, Helvetica, sans-serif;
        font-size: medium;
    }
</style>

@(Html.Kendo().TabStrip()
        .Name("ContactsTabStrip")
        .Items(items =>
        {
            items.Add()
                .Text("Τηλέφωνα")
                .Selected(true)
                .Content(@<text>
                    <p class="sansserif"></p>
                    <p class="sansserif">
                        <span class="sansserif">Υποστήριξη αιτούντων - Ωράριο: 07:30 πμ έως 03:30 μμ</span>
                    </p>
                    <p class="sansserif">
                        @foreach (var person in Model)
                        {
                            <div style="margin-left:20px;margin-bottom:10px;font-size:16px">@person.SUPPORT_PHONE - @person.SUPPORT_NAME</div>
                        }
                    </p>
                    <p></p>
                </text>)
                .ContentHtmlAttributes(new { style = "min-height: 200px" });
            items.Add()
                .Text("Email")
                .Content(@<text>
                    <p class="sansserif"></p>
                    <p class="sansserif">
                        <span class="sansserif">Υποστήριξη μέσω E-mail:</span>
                    </p>
                    <p></p>
                    <p class="sansserif">
                        <span><a href="mailto:a2.vnshelpdesk@dypa.gov.gr"><b>a2.vnshelpdesk@dypa.gov.gr</b></a></span><br />
                    </p>
                    <p></p>
                    <p class ="sansserif" style="font-weight:bold">
                        Τυχόν ερωτήματα μέσω email για να απαντηθούν απαιτούνται : Ονοματεπώνυμο, ΑΦΜ, Τηλέφωνα επικοινωνίας.
                    </p>
                </text>)
                .ContentHtmlAttributes(new { style = "min-height: 200px" });
            items.Add()
                .Text("Διεύθυνση")
                .Content(@<text>
                    <table>
                        <tr>
                            <td width="300">
                                <p></p><br />
                                <p class="sansserif" style="text-shadow:1px 1px 2px blue; font-size:22px">
                                    Διοίκηση Δ.ΥΠ.Α.
                                </p>
                                <p></p><br />
                                <p class="sansserif" style="text-shadow:1px 1px 2px blue; font-size:larger">
                                    Εθν. Αντιστάσεως 8
                                </p>
                                <p class="sansserif" style="text-shadow:1px 1px 2px blue; font-size:larger">
                                    Τ.Κ. 17456
                                </p>
                                <p class="sansserif" style="text-shadow:1px 1px 2px blue; font-size:larger">
                                    ΑΛΙΜΟΣ, ΑΤΤΙΚΗ
                                </p>
                            </td>
                            <td>
                                <p style="margin:5px">
                                    <img style=" border:1px solid blue"src="~/Images/other/oaed-map.jpg" height="400" width="500" />
                                </p>
                            </td>
                        </tr>
                    </table>

                </text>)
                .ContentHtmlAttributes(new { style = "min-height: 200px" });
        })
)

